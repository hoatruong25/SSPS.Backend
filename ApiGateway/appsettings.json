{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "AllowedHosts": "*",

  "Kestrel": {
    "Endpoints": {
    },
    "EndpointDefaults": {
      "Protocols": "Http"
    }
  },

  "SSPSDatabase": {
    // MongoDB Server
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "SSPS_DB",
    "UserCollectionName": "Users",
    "ForgotPasswordCollectionName": "ForgotPasswords",
    "MoneyPlanCollectionName": "MoneyPlans",
    "NoteCollectionName": "Notes",
    "ToDoNoteCollectionName": "ToDoNotes",

    // PostgreSQL Server
    "PgConnectionString": "Host=localhost; Database=SPSSDB; Username=postgres; Password=123456",

    // Redis Server
    "Redis": "localhost:6379"
  },


  // Key get form fire base
  "FcmNotification": {
    "SenderId": "*SENDER_ID*",
    "ServerKey": "*SERVER_KEY*"
  }
}